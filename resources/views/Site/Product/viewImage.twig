{% block body %}

    {% if (setting.d_config_show_product_image == 'yes') %}
        {% if (setting.d_config_show_product_thumbnail == 'yes') %}

            <img class="productImage-display"
                    {% if product.meta.image_thump is not empty %} src="{{ product.meta.image_thump }}" {% else %} src="" alt="No Image" {% endif %}
                 height="80" width="80">

        {% else %}
            {% if product.meta.image is not empty %}
                <img class="productImage-display" {% if product.meta.image is not empty %} src="{{ product.meta.image }}" {% else %} src="" alt="No Image" {% endif %}
                     height="300" width="300">
            {% endif %}
        {% endif %}
    {% endif %}
{% endblock %}